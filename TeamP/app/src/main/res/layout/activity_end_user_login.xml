<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.syedatifhussain.myapplication.EndUserLogin"
    android:background="@drawable/usercredentials"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btnProceedCredentials"
        style="@style/FirebaseUI.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:layout_marginBottom="74dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextUserNameCredentials"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/rightroundxd"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="User ID"
        android:inputType="textPersonName"
        android:lineSpacingExtra="2sp"
        android:singleLine="true"
        android:textAlignment="center"
        android:layout_above="@+id/editTextUserPasswordCredentials"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextUserPasswordCredentials"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/editTextOrgIDCredentials"
        android:layout_alignLeft="@+id/editTextUserNameCredentials"
        android:layout_alignStart="@+id/editTextUserNameCredentials"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rightroundxd"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Password"
        android:inputType="textPersonName"
        android:lineSpacingExtra="2sp"
        android:singleLine="true"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editTextOrgIDCredentials"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/btnProceedCredentials"
        android:layout_alignLeft="@+id/editTextUserPasswordCredentials"
        android:layout_alignStart="@+id/editTextUserPasswordCredentials"
        android:layout_marginBottom="88dp"
        android:background="@drawable/rightroundxd"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Organization ID"
        android:inputType="textPersonName"
        android:lineSpacingExtra="2sp"
        android:singleLine="true"
        android:textAlignment="center" />
</RelativeLayout>
