<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.syedatifhussain.myapplication.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_visit_user_image"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="23dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/profile_visit_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="42dp"
            android:gravity="center"
            android:text="Display User Name"
            android:textColor="@color/cardview_light_background"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_visit_user_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_visit_user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Display User Role"
            android:textColor="@color/cast_intro_overlay_button_background_color"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
