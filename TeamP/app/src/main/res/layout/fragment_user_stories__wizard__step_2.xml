<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/userstorycreation2"
    tools:context="com.example.syedatifhussain.myapplication.UserStories_Wizard_Step_2">


    <RadioGroup
        android:id="@+id/radioGroupFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="210dp"

        >

        <RadioButton
            android:id="@+id/radioTechnicalFragment"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Technical Story"
            android:textAlignment="viewStart"
            android:textSize="16sp"></RadioButton>

        <RadioButton
            android:id="@+id/radioUserFragment"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="User Story"
            android:textAlignment="viewStart"
            android:textSize="16sp" />

    </RadioGroup>

    <ImageButton
        android:id="@+id/btnAddAttachmentsFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView13"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignRight="@+id/textView13"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="56dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_attachment_black_24dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioGroupFragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="119dp"
        android:layout_marginLeft="89dp"
        android:layout_marginStart="89dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="89dp"
        android:layout_marginEnd="89dp" />

    <Button
        android:id="@+id/btnNextStepUserStories2"
        style="@style/FirebaseUI.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnAddAttachmentsFragment"
        android:layout_alignRight="@+id/btnAddAttachmentsFragment"
        android:layout_below="@+id/btnAddAttachmentsFragment"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/textView12"
        android:text="Next" />

</RelativeLayout>
