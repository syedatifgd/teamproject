<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homefragmentid"
    android:weightSum="1">

    <Button
        android:id="@+id/btnJoinProject"
        style="@style/FirebaseUI.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="225dp"
        android:fontFamily="monospace"
        android:text="Join a project"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCreateProject"
        style="@style/FirebaseUI.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnJoinProject"
        android:layout_alignStart="@+id/btnJoinProject"
        android:layout_below="@+id/btnJoinProject"
        android:layout_marginTop="18dp"
        android:fontFamily="monospace"
        android:text="Create a project"
        android:textAlignment="center"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/progressBarHolder"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:alpha="0.4"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="center" />
    </FrameLayout>

</RelativeLayout>