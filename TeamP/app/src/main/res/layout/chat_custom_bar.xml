<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/uImageChat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/baseline_person_white_36dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView5"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="1dp"/>

    <TextView
        android:id="@+id/uNameChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/uRoleChat"
        android:layout_alignTop="@+id/uImageChat"
        android:text="Display Name"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/uRoleChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uNameChat"
        android:layout_marginStart="71dp"
        android:layout_toEndOf="@+id/textView5"
        android:text="Role"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/uImageChat" />


</RelativeLayout>